<div class="container">
     <h1 class="text-center red " style=" color: purple; font-family:    Lucida Sans Regular;  "><u>Set Your Massege</u></h1>
    
    <div class="row p-4">
        <div class="col-md-2"></div>

        <div class="col-md-8">
            <form action="/admin/cominfo/about/aboutus" method="post" enctype="multipart/form-data">
                 <div class="form-group">
                    <label for="name">Your Name</label>
                    <input type="text" class="form-control" name="name" id="nameid" placeholder="Enter Your Name" value="">
                </div>
                <div class="form-group">
                    <label for="designation">Your Designation</label>
                    <input type="text" class="form-control" name="designation" id="designationid" placeholder="Enter Your Designation" value="">
