                <div class="form-group">
                    <label for="description">Your Massege</label>
                    <textarea name="description" id="descriptionid" class="form-control" placeholder="Write Your Massege here" rows="10" value=""></textarea>
                </div>

                <div class="form-group">
                    <label for="file">Upload Your Photo</label>
                    <input type="file" class="form-control" id="fileid" name="uploadedFile"  accept="image/jpeg, image/jpg, image/png, image/bmp" vlaue="{{uploadedFile}}">
                </div>

                <br>
                <br>
                
                
                <button class="btn btn-outline-success btn-lg" type="submit" align="center" >SUBMIT</button>

                <br><br><br>
                
                
            </form>
        </div>
    </div>
    

    
    
</div>
