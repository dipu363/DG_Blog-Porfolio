

    <div class="container-fluid">
      <!-- Breadcrumbs-->
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Posts</li>
      </ol>
      <!-- Example DataTables Card-->
      <div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-table"></i> All Posts</div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>

                    <th>ID</th>          
                    <th>Title</th>
                    <th>Description</th>
                    <th>Create Date</th>
                    <th>Update Date</th>
                    <th>Actions</th>
                
                </tr>
              </thead>
              <tfoot>
                <tr>
                    <th>ID</th>          
                    <th>Title</th>
                    <th>Description</th>
                    <th>Create Date</th>
                    <th>Update Date</th>
                    <th>Actions</th>
                </tr>
              </tfoot>
              <tbody>
                {{#each Posts}}  
                <tr>
                    <td>{{id}}</td>          
                    <td>{{title}}</td>
                    <td>{{description}}</td>
                    <td>{{createdAt}}</td>
                    <td>{{updatedAt}}</td>
                    <td class="d-flex">
                        <a href="/admin/posts/edit/{{id}}" class="btn btn-sm btn-warning mr-2">Edit</a>

                        <form action="/admin/posts/delete/{{id}}" method="post">
                            <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                        </form>
                        
                        
                    </td>
                </tr>
               {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    



